{{form_start(form)}}
{{form_row(form.name)}}
{{form_row(form.content)}}
{{form_row(form.category)}}
<div class='container'>
	<div class='row'>
		{% for picture in trick.pictures %}
			{% if trick.pictures | length == 0 %}
				
			{% else %}


				<div class="">
					<img src={{asset('Image/' ~ picture.filename)}} class="mt-4 mb-4" alt="" height="150" px width="150" px></img>
				<a href="{{path('delete_image', {'id':picture.id})}}" type="submit" class="btn btn-secondary">


					<i class="far fa-trash-alt right mb-4"></i>
					Supprimer la photo
				</a>
				{% set isMain = false %}
				{% if picture.main == 1 %}
					<i class="fas fa-star"></i>
					{% set isMain = true %}
				{% endif %}
				{% if isMain == false  %}
					<a href="{{path('main_image', {'id':picture.id})}}">
						Devenir Main</a>
				{% endif %}


			{% endif %}
		{% endfor %}
	</div>
</div>


{{form_row(form.pictures)}}
<button type="button" class="add_item_link mt-4 mb-4" data-collection-holder-class="video">Ajouter une video</button>
<ul class="video" data-prototype="{{form_widget(form.video.vars.prototype)|e('html_attr')}}">
	{% for video in form.video %}
		<li>{{ form_row(video) }}</li>
	{% endfor %}

</ul>
<button class="btn">{{ button_label|default('Ajouter la figure') }}</button>
{#data-index="{{ form.video|length > 0 ? form.video|last.vars.name + 1 : 0 }}"#}
{{form_end(form)}}
