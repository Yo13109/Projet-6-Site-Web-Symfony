{% extends "base.html.twig"  %}
{% form_theme formUser 'bootstrap_4_layout.html.twig' %}
{% block body %}
	<div class="col-lg-8 offset-lg-1 col-md-12">
		<div class="card  mt-5">
			<div class="card-header">
				<h3>Inscrivez vous</h3>
			</div>
			<div class="card-content mb-5">
				{{ form_start(formUser) }}

				{{ form_row(formUser.avatar, {'attr':{'placeholder':"Votre pseudo.."}}) }}
				{{ form_row(formUser.email ,{'attr':{'placeholder':"Ecrire votre email"}}) }}
                {{ form_row(formUser.password ,{'attr':{'placeholder':"Ecrire votre mot de passe"}}) }}

			</div>
            

			<button type="submit" class="btn btn-success">S'inscrire</button>
			{{ form_end(formUser) }}
		</div>
	</div>
{% endblock %}